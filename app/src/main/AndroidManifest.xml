<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.comiccharacters">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_comic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_comic"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComicCharacters">
        <activity android:name=".ClassicActivity" android:label="Classic comics" />
        <activity android:name=".BonelliActivity" android:label="Bonelli comics" />
        <activity android:name=".MCActivity" android:label="MC comics" />
        <activity android:name=".DCActivity" android:label="DC comics"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>